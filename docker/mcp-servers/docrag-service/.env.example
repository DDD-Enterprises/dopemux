# DocRAG Service Configuration

# Voyage AI API Configuration (Required)
VOYAGEAI_API_KEY=your_voyage_api_key_here

# Service Configuration
DOCRAG_HOST=0.0.0.0
DOCRAG_PORT=3009
DOCRAG_WORKERS=1

# Milvus Configuration
MILVUS_HOST=milvus
MILVUS_PORT=19530
MILVUS_TOKEN=
MILVUS_TIMEOUT=10.0

# Collection Configuration
DOCS_COLLECTION_NAME=docs_index
EMBEDDING_DIMENSION=1024
METRIC_TYPE=COSINE

# Index Configuration
INDEX_TYPE=HNSW
HNSW_M=16
HNSW_EF_CONSTRUCTION=200
HNSW_EF_SEARCH=64

# Voyage AI Models
VOYAGE_EMBED_MODEL=voyage-3
VOYAGE_RERANK_MODEL=rerank-2.5
VOYAGE_TIMEOUT=30.0
VOYAGE_MAX_RETRIES=3

# Chunking Configuration
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=100
MAX_CHUNK_SIZE=2000
MIN_CHUNK_SIZE=100

# Security Configuration
ALLOWED_EXTENSIONS=.pdf,.md,.html,.txt,.docx
MAX_FILE_SIZE_MB=50
ENABLE_ACL=true
DEFAULT_SENSITIVITY=internal

# Feature Flags
ENABLE_HYBRID_SEARCH=true
ENABLE_RERANKING=true
ENABLE_CACHING=true

# Performance Settings
SEARCH_TIMEOUT=10.0
INGEST_TIMEOUT=300.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json