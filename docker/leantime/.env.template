# Leantime Docker Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION (MySQL)
# ===========================================
MYSQL_ROOT_PASSWORD=secure_root_password_change_me
MYSQL_DATABASE=leantime_db
MYSQL_USER=leantime_user
MYSQL_PASSWORD=secure_db_password_change_me

# ===========================================
# LEANTIME APPLICATION SETTINGS
# ===========================================
LEAN_SITENAME=Dopemux Leantime
LEAN_SESSION_PASSWORD=very_secure_session_password_minimum_32_chars
LEAN_APP_URL=http://localhost:8080
LEAN_SESSION_EXPIRATION=28800
LEAN_DEBUG=0

# ===========================================
# ADHD OPTIMIZATION SETTINGS
# ===========================================
LEAN_ADHD_MODE=true
LEAN_NOTIFICATION_BATCH=true
LEAN_CONTEXT_PRESERVATION=true

# ===========================================
# MCP INTEGRATION SETTINGS
# ===========================================
LEAN_MCP_ENABLED=true
LEAN_MCP_TOKEN=your_mcp_personal_access_token_here
LEAN_API_ENABLED=true

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_PASSWORD=secure_redis_password_change_me

# ===========================================
# FILE STORAGE (Optional S3 Configuration)
# ===========================================
LEAN_S3_USE_S3=false
LEAN_S3_ACCESS_KEY=
LEAN_S3_SECRET_KEY=
LEAN_S3_BUCKET=
LEAN_S3_REGION=

# ===========================================
# SYSTEM PERMISSIONS
# ===========================================
PUID=1000
PGID=1000

# ===========================================
# SECURITY NOTES
# ===========================================
# 1. Change ALL passwords before deployment
# 2. Use strong passwords (minimum 32 characters)
# 3. Consider using Docker secrets for production
# 4. Regularly rotate passwords and tokens
# 5. Enable HTTPS in production environments

# ===========================================
# DOPEMUX INTEGRATION
# ===========================================
# These settings will be used by Dopemux installer
DOPEMUX_INTEGRATION_ENABLED=true
DOPEMUX_SYNC_INTERVAL=300
DOPEMUX_CONTEXT_BRIDGE_ENABLED=true