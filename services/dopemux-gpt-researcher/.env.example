# Dopemux GPT Researcher Environment Configuration
# Copy this file to .env and configure your API keys and settings

# === Core API Keys ===
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# === Search Engine APIs ===
TAVILY_API_KEY=your-tavily-api-key-here
EXA_API_KEY=your-exa-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here
CONTEXT7_API_KEY=your-context7-api-key-here

# === Service Configuration ===
WORKSPACE_ID=/workspace/dopemux-mvp
API_PORT=8000
WEBSOCKET_PORT=8001

# === ADHD Features ===
CONPORT_ENABLED=true
AUTO_SAVE_INTERVAL=30
POMODORO_ENABLED=true
WORK_DURATION_MINUTES=25
BREAK_DURATION_MINUTES=5
MAX_CONCURRENT_SOURCES=5

# === Research Configuration ===
DEFAULT_RESEARCH_TYPE=feature_research
ENABLE_PROGRESSIVE_DISCLOSURE=true
GENTLE_NOTIFICATIONS=true
VISUAL_PROGRESS_ENABLED=true

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/dopemux-gpt-researcher.log

# === Development Settings ===
DEBUG=false
RELOAD=true