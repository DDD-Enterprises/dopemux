{
  "mcp_servers": {
    "gpt-researcher": {
      "name": "gpt-researcher",
      "description": "Advanced research capabilities with ADHD optimizations",
      "command": "gptr-mcp",
      "args": [],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "TAVILY_API_KEY": "${TAVILY_API_KEY}",
        "RETRIEVER": "tavily",
        "GPTR_LOG_LEVEL": "INFO",
        "GPTR_STRATEGY": "fast",
        "GPTR_MAX_DEPTH": "3",
        "GPTR_MAX_BREADTH": "5"
      },
      "startup_timeout": 30,
      "health_check": {
        "enabled": true,
        "interval": 30,
        "timeout": 10,
        "retries": 3
      }
    }
  },
  "research_workflows": {
    "quick_insight": {
      "description": "Fast 5-minute research for immediate insights",
      "steps": [
        {
          "tool": "quick_search",
          "timeout": 30,
          "adhd_optimized": true
        }
      ],
      "estimated_time": "5 minutes",
      "cognitive_load": "low"
    },
    "deep_analysis": {
      "description": "Comprehensive 25-minute research session",
      "steps": [
        {
          "tool": "deep_research",
          "timeout": 600,
          "adhd_optimized": true,
          "chunk_duration": 25
        },
        {
          "tool": "write_report",
          "timeout": 120,
          "adhd_optimized": true
        }
      ],
      "estimated_time": "25-30 minutes",
      "cognitive_load": "medium",
      "break_suggestion": true
    },
    "competitive_research": {
      "description": "Multi-target research with comparative analysis",
      "steps": [
        {
          "tool": "deep_research",
          "targets": ["company_a", "company_b", "company_c"],
          "parallel": true,
          "timeout": 900
        },
        {
          "tool": "write_report",
          "type": "comparative",
          "timeout": 180
        }
      ],
      "estimated_time": "45-60 minutes",
      "cognitive_load": "high",
      "chunk_strategy": "25min_with_breaks"
    }
  },
  "adhd_settings": {
    "progress_visualization": {
      "enabled": true,
      "style": "detailed",
      "update_frequency": 5
    },
    "attention_management": {
      "break_suggestions": true,
      "break_frequency": 25,
      "hyperfocus_warnings": true,
      "context_preservation": true
    },
    "decision_support": {
      "max_options": 3,
      "recommendation_enabled": true,
      "consequence_preview": true
    },
    "session_management": {
      "auto_save_interval": 120,
      "resume_prompts": true,
      "context_reconstruction": true
    }
  }
}