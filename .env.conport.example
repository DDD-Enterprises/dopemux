# ConPort Local Service Environment Example
# Use workspace-relative paths; copy to .env.conport and edit.

CONPORT_MODE=http
CONPORT_HOST=127.0.0.1
CONPORT_PORT=3004

# Workspace Configuration
CONPORT_WORKSPACE_ID=.
CONPORT_AUTO_DETECT_WORKSPACE=true

# Data Paths (relative)
CONPORT_DB_PATH=./context_portal/context.db
CONPORT_LOG_FILE=./.conport/logs/conport.log
CONPORT_BASE_PATH=./context_portal

# Logging Configuration
CONPORT_LOG_LEVEL=INFO

# ADHD-Specific Settings
CONPORT_SESSION_TIMEOUT=7200
CONPORT_CONTEXT_RETENTION=30
CONPORT_PROGRESS_TRACKING=enabled
CONPORT_VISUAL_FEEDBACK=enabled

# Vector Search Configuration
CONPORT_VECTOR_SEARCH_ENABLED=true
CONPORT_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CONPORT_VECTOR_DIMENSIONS=384

# Performance Settings
CONPORT_MAX_CONCURRENT_REQUESTS=10
CONPORT_REQUEST_TIMEOUT=30
CONPORT_DB_CONNECTION_POOL_SIZE=5

# Development Settings
CONPORT_DEBUG_MODE=false
CONPORT_HEALTH_CHECK_INTERVAL=30
CONPORT_METRICS_ENABLED=true
